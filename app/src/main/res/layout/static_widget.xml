<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/appwidget_text"
        android:padding="5dp"
        android:text="@string/appwidget_text"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="5dp"
        android:paddingBottom="0dp"
        android:text="A data structure is a particular way of organizing data in a computer so that it can be used effectively.A data structure is a particular way of organizing data in a computer so that it can be used effectively.A data structure is a particular way of organizing data in a computer so that it can be used effectively."
        android:textSize="12sp" />
</LinearLayout>
